<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="todosPU" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.exemple.Tache</class>

        <properties>

            <!-- ðŸ”¹ DRIVER MYSQL -->
            <property name="jakarta.persistence.jdbc.driver"
                      value="com.mysql.cj.jdbc.Driver"/>

            <!-- ðŸ”¹ URL MYSQL -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/todosdb?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true"/>


            <!-- ðŸ”¹ IDENTIFIANTS MYSQL -->
            <property name="jakarta.persistence.jdbc.user" value="todosdb"/>
            <property name="jakarta.persistence.jdbc.password" value="todosdb"/>

            <!-- ðŸ”¹ DIALECT MYSQL -->
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.MySQL8Dialect"/>

            <!-- ðŸ”¹ STRATÃ‰GIE DE SCHÃ‰MA -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- LOG SQL -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

        </properties>

    </persistence-unit>
</persistence>
